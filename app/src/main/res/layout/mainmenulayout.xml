<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerbackground"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:id="@+id/quickfindlayout"
        >

        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/luckypoint"
            android:id="@+id/quickfindbtn"
            android:text="Quick Find"
            android:textColor="#ffff" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/quickfindlayout"
        android:layout_marginTop="2dp"
        android:id="@+id/historylayout"
        android:gravity="center"
        >
        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/luckypoint"
            android:textColor="#ffff"
            android:text="History"
            android:id="@+id/historybtn"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/historylayout"
        android:id="@+id/gmaplayout"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:text="Gmaps"
            android:background="@color/luckypoint"
            android:id="@+id/GmapsBtn"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/SettingsLayout"
        android:layout_below="@id/gmaplayout"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Settings"
            android:textColor="#ffff"
            android:background="@color/luckypoint"
            android:id="@+id/SettingsBtn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/SettingsLayout"
        android:layout_marginTop="80dp"
        android:id="@+id/exitLayout"
        >

        <Button
            android:id="@+id/exitbtn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/jalapenored"
            android:text="EXIT"
            android:textColor="#ffff"
            />

    </LinearLayout>

</RelativeLayout>